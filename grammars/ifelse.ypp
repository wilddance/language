if: ifelse_bool block else block {

    // making Code save code to brevious branch
    lines.unnest();

    // obs≈Çuga else
    int goto_line = lines.code_size_cur() +help + 1;
    int jump_line = lines.code_size_cur();

    gotoline(str("@%d", goto_line));

    lines.copy_buffer();
    lines.unnest();

    help-=2;
    jlz(str("@%d", jump_line));

    lines.copy_buffer();

    
}

else: ELSE{
    lines.nest();
}

ifelse_bool: IFELSE bool_exp{
    puts("Starting ifelse");
    help+=2;
    lines.nest();
}
